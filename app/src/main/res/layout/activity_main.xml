<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingLeft="100dp"
        android:paddingTop="60dp"
        android:text="Calculator"
        android:textSize="50sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingStart="10dp"
        android:paddingTop="100dp"
        android:paddingBottom="40dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="1"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="2"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="3"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="+"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="4"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="5"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="6"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="-"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="7"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="8"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="9"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="D"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="0"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="="
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="C"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="*"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:text="/"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:text="."/>

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#b3a5d9"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/operand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"
                android:backgroundTint="#FFFFFFFF"
                />

            <TextView
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"

                android:backgroundTint="#FFFFFFFF"/>

            <TextView
                android:id="@+id/operand1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"
                android:backgroundTint="#FFFFFFFF"/>



            <TextView
                android:id="@+id/equa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"
                android:backgroundTint="#FFFFFFFF"/>
            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"
                android:backgroundTint="#FFFFFFFF"
                />

        </TableRow>


    </TableLayout>



</LinearLayout>
